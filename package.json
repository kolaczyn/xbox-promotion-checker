{
  "name": "kolaczyn-typescript-template",
  "license": "MIT",
  "author": "Paweł Kołaczyński",
  "repository": "github:kolaczyn/typescript-template",
  "version": "2.0.0",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "dev:run": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier -c src",
    "types": "tsc --noEmit",
    "lint:check": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --watch",
    "test:run": "jest",
    "ci": "run-p -l --aggregate-output format lint:check types test:run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.3.31",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "lib"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/umd/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/umd/index.js"
    }
  },
  "sideEffects": false,
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "@tsconfig/node18": "^1.0.1"
  }
}